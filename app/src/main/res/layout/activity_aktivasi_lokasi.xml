<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Gambar logo besar -->
        <ImageView
            android:id="@+id/imgAktivasi"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_lokasi_sitrek"
            android:contentDescription="Ilustrasi Lokasi" />

        <!-- Judul -->
        <TextView
            android:id="@+id/tvJudul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aktifkan Lokasi untuk\nBerbagi Perjalanan"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="24dp" />

        <!-- Subjudul -->
        <TextView
            android:id="@+id/tvDeskripsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aktifkan lokasi agar pengguna lain dapat melihat kendaraan yang Anda tumpangi secara real-time di perangkat masing-masing"
            android:textSize="14sp"
            android:textColor="#666666"
            android:textAlignment="center"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="32dp" />

        <!-- Tombol Aktifkan -->
        <Button
            android:id="@+id/btnAktifkanLokasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aktifkan Lokasi Kendaraan"
            android:backgroundTint="#0077D7"
            android:textColor="#FFFFFF" />

        <!-- Tombol Tolak -->
        <Button
            android:id="@+id/btnTolakLokasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jangan Izinkan Aktivasi Lokasi"
            android:layout_marginTop="12dp"
            android:backgroundTint="#EEEEEE"
            android:textColor="#000000" />
    </LinearLayout>
</ScrollView>
