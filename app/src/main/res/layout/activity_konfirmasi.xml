<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#FFFFFF"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Ilustrasi centang dan bus -->
    <ImageView
        android:id="@+id/imgSuccess"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_lokasi_berhasil"
        android:contentDescription="Berhasil" />

    <!-- Judul -->
    <TextView
        android:id="@+id/tvJudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lokasi Kendaraan\nBerhasil Dibagikan"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#000000"
        android:layout_marginTop="24dp" />

    <!-- Subjudul -->
    <TextView
        android:id="@+id/tvSubjudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lokasi kendaraan Anda telah dibagikan selama:"
        android:textSize="14sp"
        android:textColor="#666666"
        android:textAlignment="center"
        android:layout_marginTop="8dp" />

    <!-- Durasi waktu -->
    <TextView
        android:id="@+id/tvDurasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00:00"
        android:textSize="16sp"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_durasi"
        android:textColor="#000000" />

    <!-- Tombol Matikan -->
    <Button
        android:id="@+id/btnStop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Matikan Berbagi Lokasi"
        android:layout_marginTop="32dp"
        android:backgroundTint="#0077D7"
        android:textColor="#FFFFFF" />

    <!-- Tombol Kembali -->
    <Button
        android:id="@+id/btnKembali"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kembali"
        android:layout_marginTop="12dp"
        android:backgroundTint="#EEEEEE"
        android:textColor="#000000" />
</LinearLayout>
